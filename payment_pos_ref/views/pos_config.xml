<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="custom_payment_pos_ref_form_view">
        <field name="name">pos.config.setting.form.senf.email.receipt.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='category_reference']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="allow_for_receipt_email"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="allow_for_receipt_email"/>
                        <div class="text-muted">
                            Enable this for send receipt email to customer.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>