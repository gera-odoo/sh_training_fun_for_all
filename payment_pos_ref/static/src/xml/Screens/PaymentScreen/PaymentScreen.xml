<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('button') and hasclass('back')]" position="after">

            <t t-if="env.pos.get_order()">
                 <div class="button next" t-on-click="sendEmailReceipt">
                    <t t-if="env.pos.get_order().get_receipt_email()">
                        <span class="next_text" style="color: #008443 !important;">Payment Reference</span>
                        <i class="fa fa-paper-plane" aria-hidden="true" style="color: #008443 !important;margin-left: 7px;"/>
                    </t>
                     <t t-else="">
                        <span class="next_text" style="text-decoration-line: line-through;">Payment Reference</span>
                        <i class="fa fa-paper-plane" aria-hidden="true" style="margin-left: 7px;"/>
                     </t>
                </div>
            </t>

        </xpath>
    </t>

</templates>